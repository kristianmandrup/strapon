%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"
  
  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "Untitled"

  -# Included CSS Files
  = stylesheet_link_tag "application"

  -# TODO below is for development configure and down required production config when ready
  = javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.5.3/modernizr.min.js"
  -#= javascript_include_tag "modernizr_webfonts"

  = csrf_meta_tag

%body{:class => params[:controller]}
  #container.container
    .row
      .twelve.columns
        #main{:role => "main"}
          - flash.each do |key, message|
            %div{:id => "flash_#{key}"}= message

          = yield

  -# Included JS Files
  = javascript_include_tag "application"
